users:
  - default
  - name: cloud
    groups: sudo
    shell: /bin/bash
    sudo:  ALL=(ALL) NOPASSWD:ALL
    lock_passwd: false
    passwd: $1$xyz$gHGNZEUfkr7kO4T0iQWw71 # openssl passwd -1 -salt xyz cloud
    ssh-authorized-keys:
      - ssh-rsa  Insert your own SSH key here

bootcmd:
  - [ cloud-init-per, once, firstboot, touch, /run/firstboot ]

